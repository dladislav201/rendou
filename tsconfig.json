{
  "references": [
    { "path": "./packages/rendou/core" },
    { "path": "./packages/rendou/next" }
  ],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@mantine/*": ["./packages/@mantine/*/src"]
    }
  },
  "include": [
    "packages/rendou/*/src",
    "packages/rendou/next/types/typings.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
